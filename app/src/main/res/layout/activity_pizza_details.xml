<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F5"
    android:fillViewport="true"
    tools:context=".PizzaDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Pizza Image -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#FFF5F5F5">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:contentDescription="Back button"
                android:src="@drawable/caret_left" />

            <!-- Favorite Heart Icon -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_cart_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:background="@drawable/shopping_bag_background"
                android:contentDescription="Cart or Favorite"
                android:padding="8dp"
                android:src="@drawable/shoppingbag_img" />

            <!-- Pizza Image -->
            <ImageView
                android:id="@+id/iv_pizza_image"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_centerInParent="true"
                android:contentDescription="Pizza Image"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza_placeholder" />

        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Pizza Title -->
            <TextView
                android:id="@+id/tv_pizza_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Classico Mixed\nPizza"
                android:textColor="#FF2D2D2D"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Pizza Description -->
            <TextView
                android:id="@+id/tv_pizza_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="A delicious blend of classic toppings on a perfectly baked crust, bringing together the best of traditional pizza flavors."
                android:textColor="#FF666666"
                android:textSize="14sp" />

            <!-- Star Rating -->
            <ImageView
                android:id="@+id/iv_star_rating"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="5 star rating"
                android:src="@drawable/ic_star_filled" />

            <!-- Size Options Section -->
            <TextView
                android:id="@+id/tv_size_options_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Size Options"
                android:textColor="#FF2D2D2D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Size Options Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_size_small"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/size_button_selected"
                    android:text="S"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_size_medium"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/size_button_unselected"
                    android:text="M"
                    android:textColor="#FF666666"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_size_large"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/size_button_unselected"
                    android:text="L"
                    android:textColor="#FF666666"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Quantity Section -->
            <TextView
                android:id="@+id/tv_quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Quantity"
                android:textColor="#FF2D2D2D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_decrease_quantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/quantity_button_background"
                    android:contentDescription="Decrease quantity"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FF2D2D2D"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_increase_quantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/quantity_button_background"
                    android:contentDescription="Increase quantity"
                    android:src="@drawable/ic_plus" />

            </LinearLayout>

            <!-- Bottom Section with Price and Add to Cart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Price Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Price"
                        android:textColor="#FF666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$7.99"
                        android:textColor="#FF2D2D2D"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Shopping Bag Icon -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_shopping_bag"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shopping_bag_background"
                    android:contentDescription="Shopping bag"
                    android:padding="8dp"
                    android:src="@drawable/shoppingbag_img" />

                <!-- Add to Cart Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@drawable/button_yellow"
                    android:drawableStart="@drawable/ic_cart_white"
                    android:drawablePadding="8dp"
                    android:elevation="2dp"
                    android:paddingHorizontal="24dp"
                    android:text="Add to cart"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>