<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    tools:context=".PizzaListActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menu_img"
            android:contentDescription="Menu"
            android:layout_marginEnd="16dp" />

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chip_top_rated"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Top rated"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:background="@drawable/chip_selected"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/chip_hot_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Hot Sale"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:background="@drawable/chip_unselected"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/chip_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Popular"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:background="@drawable/chip_unselected"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/notification_img"
            android:contentDescription="Notifications"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_bg"
            android:hint="Search your fav pizza"
            android:textColorHint="#999999"
            android:textColor="#333333"
            android:textSize="14sp"
            android:paddingLeft="40dp"
            android:paddingRight="16dp"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="12dp" />

    </LinearLayout>

    <!-- Content with RecyclerView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose one of\nUncle John's Pizzas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="20dp" />

        <!-- RecyclerView for Pizza Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pizzas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

    </LinearLayout>

</LinearLayout>