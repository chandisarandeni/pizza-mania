<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Back"
                android:src="@drawable/caret_left" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Help &amp; Support"
                android:textColor="#FF2D2D2D"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- FAQ Section -->
        <TextView
            android:id="@+id/tv_faq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Frequently Asked Questions"
            android:textColor="#FF2D2D2D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Question 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Q: How do I track my pizza order?"
            android:textColor="#FF444444"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="A: You can track your order in the 'My Orders' section with live status updates."
            android:textColor="#FF777777"
            android:textSize="15sp" />

        <!-- Question 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Q: Can I cancel or change my order?"
            android:textColor="#FF444444"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="A: Yes, you can cancel or change your order within 5 minutes of placing it."
            android:textColor="#FF777777"
            android:textSize="15sp" />

        <!-- Question 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Q: What payment methods are accepted?"
            android:textColor="#FF444444"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="A: We accept credit/debit cards, mobile payments, and cash on delivery."
            android:textColor="#FF777777"
            android:textSize="15sp" />

        <!-- Question 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Q: Do you offer refunds?"
            android:textColor="#FF444444"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="A: Refunds are provided if the order is incorrect, late beyond 1 hour, or not delivered."
            android:textColor="#FF777777"
            android:textSize="15sp" />

        <!-- Question 5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Q: Do you have vegetarian or gluten-free options?"
            android:textColor="#FF444444"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="A: Yes, we have vegetarian, vegan, and gluten-free pizza options available."
            android:textColor="#FF777777"
            android:textSize="15sp" />

        <!-- Contact Section -->
        <TextView
            android:id="@+id/tv_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Contact Us"
            android:textColor="#FF2D2D2D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ðŸ“§ Email: support@pizzamania.com"
            android:textColor="#FF444444"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ðŸ“ž Phone: +94 112 345 678"
            android:textColor="#FF444444"
