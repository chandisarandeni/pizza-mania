<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Back"
                android:src="@drawable/caret_left" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Privacy Policy"
                android:textColor="#222222"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Section Template -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Introduction"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Welcome to PizzaMania. This Privacy Policy explains how we collect, use, and protect your personal data."
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Section 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Data We Collect"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="We collect information you provide during registration, orders, and interactions within the app. This may include your name, email, phone number, address, and payment information."
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Section 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. How We Use Your Data"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Your data is used to provide our services, improve the app experience, process orders, send notifications, and comply with legal obligations."
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Section 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Your Rights"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="You have the right to access, correct, or delete your personal information. You may also withdraw consent for certain data processing activities at any time."
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Section 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="32dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Contact Us"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="If you have any questions about this Privacy Policy, please contact us at support@pizzamania.com."
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
