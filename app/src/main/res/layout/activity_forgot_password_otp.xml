<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F5F5"
    android:padding="24dp"
    tools:context=".ForgotPasswordOtpActivity">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/caret_left"
            android:contentDescription="Back button" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_img"
            android:background="@drawable/circle_background"
            android:contentDescription="Profile image" />

    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FF2D2D2D"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 4-digit code sent to your email to reset\nyour password."
        android:textSize="16sp"
        android:textColor="#FF666666"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp" />

    <!-- 4-Digit Code Input -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp">

        <!-- Digit 1 -->
        <TextView
            android:id="@+id/tv_digit_1"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF2D2D2D"
            android:gravity="center"
            android:background="@drawable/digital_input_background"
            android:layout_marginEnd="16dp" />

        <!-- Digit 2 -->
        <TextView
            android:id="@+id/tv_digit_2"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF2D2D2D"
            android:gravity="center"
            android:background="@drawable/digital_input_background"
            android:layout_marginEnd="16dp" />

        <!-- Digit 3 -->
        <TextView
            android:id="@+id/tv_digit_3"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF2D2D2D"
            android:gravity="center"
            android:background="@drawable/digital_input_background"
            android:layout_marginEnd="16dp" />

        <!-- Digit 4 -->
        <TextView
            android:id="@+id/tv_digit_4"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF2D2D2D"
            android:gravity="center"
            android:background="@drawable/digital_input_background" />

    </LinearLayout>

    <!-- Spacer to push buttons to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Confirm Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Confirm"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_yellow"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

    <!-- Back Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Back"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_black"
        android:elevation="2dp"
        android:layout_marginBottom="24dp" />

    <!-- Resend Code Link -->
    <TextView
        android:id="@+id/tv_resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't receive the code? Resend"
        android:textSize="14sp"
        android:textColor="#FF666666"
        android:layout_gravity="center_horizontal"
        android:padding="8dp" />

</LinearLayout>