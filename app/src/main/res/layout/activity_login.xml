<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F5F3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background pattern placeholder (no image provided; replace with your drawable if you want) -->
        <ImageView
            android:id="@+id/iv_background_pattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:contentDescription="Background pattern placeholder"
            android:scaleType="centerCrop"
            android:alpha="0.5" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <!-- Main content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="32dp"
                android:paddingBottom="40dp"
                android:gravity="top|center_horizontal">

                <!-- Header -->
                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login to your account"
                    android:textSize="12sp"
                    android:textColor="#7a7a7a"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp" />

                <!-- Logo placeholder (no src) -->
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"
                    android:contentDescription="Logo placeholder"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="18dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside" />

                <!-- Email label + input -->
                <TextView
                    android:id="@+id/label_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:hint="Enter Your Email"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittext_bg"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <!-- Password label + input -->
                <TextView
                    android:id="@+id/label_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginTop="12dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:hint="Enter Your Password"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_bg"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <!-- Remember + Forgot row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <CheckBox
                            android:id="@+id/cb_remember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#000000" />

                        <TextView
                            android:id="@+id/tv_remember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remember Me"
                            android:textSize="13sp"
                            android:textColor="#444444"
                            android:layout_marginLeft="6dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:textColor="#F4A800"
                        android:textSize="13sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="2dp" />
                </LinearLayout>

                <!-- Login button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="18dp"
                    android:text="Login"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/button_yellow" />

                <!-- Sign up prompt -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:id="@+id/tv_no_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have account?"
                        android:textSize="12sp"
                        android:textColor="#7a7a7a" />

                    <TextView
                        android:id="@+id/tv_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" sign up"
                        android:textSize="12sp"
                        android:textColor="#F4A800"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </FrameLayout>

</LinearLayout>