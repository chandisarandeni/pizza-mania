<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_privacy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/caret_left"
                android:contentDescription="Back"/>

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Privacy Policy"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"/>
        </RelativeLayout>

        <!-- Section Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Introduction"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to PizzaMania! We respect your privacy and are committed to protecting your personal information. This Privacy Policy explains how we collect, use, and safeguard your data when you use our app."
                android:textColor="#555555"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- Section Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Information We Collect"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Personal information (name, email, phone, address)\n• Order history and preferences\n• Payment information\n• App usage analytics"
                android:textColor="#555555"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- Section Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. How We Use Your Data"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your data is used to:\n• Provide personalized order recommendations\n• Process payments and orders\n• Communicate promotions and updates\n• Improve app performance and experience"
                android:textColor="#555555"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- Section Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Sharing and Security"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We never sell your personal information. Your data may be shared only with trusted service providers to complete your orders or comply with legal obligations. We use advanced security measures to protect your data from unauthorized access."
                android:textColor="#555555"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- Section Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Contact Us"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you have questions about this Privacy Policy, contact support@pizzamania.com or call +94 112 345 678."
                android:textColor="#555555"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
