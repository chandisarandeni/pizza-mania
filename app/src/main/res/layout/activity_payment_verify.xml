<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F5F5"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/caret_left"
            android:contentDescription="Back button" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_img"
            android:contentDescription="Profile image" />

    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_checkout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF2D2D2D"
        android:layout_marginBottom="24dp" />

    <!-- Separator Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFE0E0E0"
        android:layout_marginBottom="16dp" />

    <!-- Date and Total Bill Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date:"
            android:textSize="14sp"
            android:textColor="#FF666666" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11 Feb, 2021"
            android:textSize="14sp"
            android:textColor="#FF2D2D2D" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Bill:"
            android:textSize="14sp"
            android:textColor="#FF666666" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$28.8"
            android:textSize="14sp"
            android:textColor="#FF2D2D2D" />

    </LinearLayout>

    <!-- Visa Card Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="48dp">

        <ImageView
            android:id="@+id/iv_visa_logo"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:src="@drawable/card_icon"
            android:layout_marginEnd="16dp"
            android:contentDescription="Visa logo" />

        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx xxx xxx 8574"
            android:textSize="16sp"
            android:textColor="#FF2D2D2D"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- PIN Code Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_pin_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF2D2D2D"
            android:gravity="center"
            android:layout_marginEnd="24dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="2dp"
            android:background="#FF2D2D2D"
            android:layout_marginEnd="24dp"
            android:layout_gravity="bottom" />

        <TextView
            android:id="@+id/tv_pin_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF2D2D2D"
            android:gravity="center"
            android:layout_marginEnd="24dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="2dp"
            android:background="#FF2D2D2D"
            android:layout_marginEnd="24dp"
            android:layout_gravity="bottom" />

        <TextView
            android:id="@+id/tv_pin_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF2D2D2D"
            android:gravity="center"
            android:layout_marginEnd="24dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="2dp"
            android:background="#FF2D2D2D"
            android:layout_marginEnd="24dp"
            android:layout_gravity="bottom" />

        <TextView
            android:id="@+id/tv_pin_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF2D2D2D"
            android:gravity="center" />

        <View
            android:layout_width="32dp"
            android:layout_height="2dp"
            android:background="#FF2D2D2D"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <!-- PIN Instructions -->
    <TextView
        android:id="@+id/tv_pin_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the PIN code sent to your phone\nto confirm the payment"
        android:textSize="14sp"
        android:textColor="#FF666666"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="48dp" />

    <!-- Spacer to push buttons to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Confirm Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Confirm"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_yellow"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <!-- Back Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Back"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_black"
        android:elevation="2dp" />


</LinearLayout>