<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F5F5"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/caret_left"
            android:contentDescription="Back button" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_img"
            android:contentDescription="Profile image" />

    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_checkout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF2D2D2D"
        android:layout_marginBottom="24dp" />

    <!-- Date and Total Bill Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date:"
            android:textSize="14sp"
            android:textColor="#FF666666" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11 Feb, 2021"
            android:textSize="14sp"
            android:textColor="#FF2D2D2D" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Bill:"
            android:textSize="14sp"
            android:textColor="#FF666666" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$28.8"
            android:textSize="14sp"
            android:textColor="#FF2D2D2D" />

    </LinearLayout>

    <!-- Success Illustration Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="32dp">

        <!-- Main Success Illustration -->
        <ImageView
            android:id="@+id/iv_success_illustration"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:layout_centerInParent="true"
            android:src="@drawable/payment_success_img"
            android:scaleType="centerCrop"
            android:contentDescription="Checkout success illustration" />

    </RelativeLayout>

    <!-- Success Message -->
    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your confirmation is\nsuccessful"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF2D2D2D"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp" />

    <!-- See Order Details Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_see_order_details"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="See order details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_yellow"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <!-- Home Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Home"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_black"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>