<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="12dp"
    android:layout_margin="8dp">

    <!-- Calories Badge -->
    <TextView
        android:id="@+id/tv_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="78 Calories"
        android:textSize="10sp"
        android:textColor="#666666"
        android:background="@drawable/calories_bg"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="8dp" />

    <!-- Pizza Image -->
    <ImageView
        android:id="@+id/iv_pizza"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:contentDescription="Pizza image"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp"
        android:src="@drawable/pizza_placeholder" />

    <!-- Pizza Name -->
    <TextView
        android:id="@+id/tv_pizza_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classico\nMixed Pizza With"
        android:textSize="12sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingExtra="1dp"
        android:layout_marginBottom="8dp" />

    <!-- Price -->
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$7.99"
        android:textSize="14sp"
        android:textColor="#FF6B35"
        android:textStyle="bold"
        android:gravity="center" />

</LinearLayout>
